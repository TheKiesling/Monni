<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CategoryDialogFragment"
    android:background="@drawable/dialog_format">

        <LinearLayout
            android:layout_width="@dimen/dialog_width1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/general_text"
                android:layout_marginVertical="@dimen/margin_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:text="@string/options_text"
                android:textSize="@dimen/subtitle_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modify_limit_option_dialog"
                style="@style/general_text"
                android:layout_marginVertical="@dimen/margin_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="0.7"
                android:text="@string/modify_limit_text" />

            <TextView
                android:id="@+id/new_register_option_dialog"
                style="@style/general_text"
                android:layout_marginVertical="@dimen/margin_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/new_register_text" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>