<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Monni" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/ube</item>
        <!--   a darker variant of the primary color, used for the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryVariant">@color/light_cobalt_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- General text style -->
    <style name="general_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/general_text_size</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Main titles -->
    <style name="main_title_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <!-- Main title 2-->
    <style name="main_title_text_2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginTop">@dimen/main_title_text_top_margin</item>
    </style>
</resources>